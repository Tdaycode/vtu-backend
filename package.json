{
  "name": "giftcop-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --files --exit-child src/index.ts",
    "build": "rimraf ./dist && cross-env NODE_ENV=production tsc && npm run templates && npm run db:seed",
    "start": "node dist/index.js",
    "db:seed": "node dist/seed.js",
    "postinstall": "npm run build",
    "templates": "cp -r ./src/templates/ ./dist/templates/",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "pretty": "prettier --write \"src/**/*.ts\""
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonfile": "^6.1.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.21",
    "@types/otp-generator": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.10.0",
    "mjml": "^4.13.0",
    "prettier": "^2.5.1",
    "rimraf": "^4.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "bcrypt": "^5.1.0",
    "big.js": "^6.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "country-to-currency": "^1.0.8",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "googleapis": "^100.0.0",
    "http-status-codes": "^2.2.0",
    "iso-3166-1-alpha-2": "^1.0.1",
    "jsonfile": "^6.1.0",
    "jsonwebtoken": "^9.0.0",
    "mjml-utils": "^2.2.1",
    "mongoose": "^6.9.1",
    "mongoose-paginate-v2": "^1.7.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "order-id": "^2.1.2",
    "otp-generator": "^4.0.1",
    "qrcode": "^1.5.1",
    "reflect-metadata": "^0.1.13",
    "short-unique-id": "^4.4.4",
    "speakeasy": "^2.0.0",
    "ts-node": "^10.9.1",
    "twilio": "^4.7.2",
    "typedi": "^0.10.0",
    "unique-username-generator": "^1.1.3",
    "uuidv4": "^6.2.13",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.6.1"
  }
}
